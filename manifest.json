{
  "manifest_version": 3,
  "name": "Support Team Daily Assistant",
  "version": "1.0.0",
  "description": "Automate common daily support tasks with quick links, response templates, and page insights.",
  "action": {
    "default_title": "Support Assistant",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "clipboardWrite"],
  "host_permissions": ["https://*/", "http://*/"],
  "content_scripts": [
    {
      "matches": ["https://*/", "http://*/"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
